    <body>
            <div class="loginContainer2">
                    <h2>Sign-in</h2>
                        <% include ./partials/messages %> 
                        <br>
                    <form action="/users/register" method="post"> 
                        <input type="name" id="name" name="name" class="name" placeholder="Enter your name"  value= "<%- typeof name != 'undefined' ? email : '' %>" required/><br>
                        <br>
                        <input type="email" id="email "name="email"class="email" placeholder="Your Email" value="<%- typeof email != 'undefined' ? email : '' %>" required/><br>
                        <br>
                        <input type="password" id="pass" name="pass" class="password "placeholder="Password" value="<%- typeof pass!= 'undefined' ? pass : ''  %>" required/><br>
                        <br>
                        <input type="password" id="pass2" name="pass2" class="password"placeholder="Password" value="<%- typeof pass2!= 'undefined' ? pass2 : ''  %>" required/><br>
                        <br>
                    <button type="submit" class="submit">Register</button>
                    </form>
                </div>
        
    </body>
</html>